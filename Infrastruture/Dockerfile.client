FROM python:3.11-slim
ENV APP_USER=nexapod
RUN addgroup --system $APP_USER && adduser --system --ingroup $APP_USER $APP_USER
WORKDIR /app

# bring in client code, model weights, and runner
COPY Client/ /app/
COPY Runner/ /app/        # <â€” ensure your runner.py lands in /app/
COPY safe_tensors/ /app/safe_tensors/
COPY requirements.txt /app/
RUN pip install --no-cache-dir -r requirements.txt

USER $APP_USER
ENV CLIENT_CONFIG=/app/config.yaml
CMD ["python", "runner.py"]
