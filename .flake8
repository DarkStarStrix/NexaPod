[flake8]
max-line-length = 88
ignore =
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E203: whitespace before ':' (conflicts with black)
    E203
exclude =
    __pycache__,
    .git,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache
per-file-ignores =
    __init__.py:F401

